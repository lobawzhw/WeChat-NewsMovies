.post-container {
  display: flex;
  flex-direction: column;
  margin-top: 20rpx;
  margin-bottom: 40rpx;
  background-color: #fff;
  border-bottom: 1px solid #ededed;
  border-top: 1px solid #ededed;
  padding-bottom: 5px;
  
}

.post-author-date {
  margin: 10rpx 0 20rpx 10rpx;  
}

.post-author {
  width: 60rpx;
  height: 60rpx;
  vertical-align: middle;
}

.post-date {
  margin-left: 20rpx;
  /*margin-bottom: 10px;*/
  vertical-align: middle;
  font-size: 26rpx;
}

.post-title {
  font-size: 34rpx;
  font-weight: 600;
  color: #333;
  margin-bottom: 10px;
  margin-left: 10px;
  vertical-align: middle;
}

.post-image {
  margin-left: 16px;
  width: 100%;
  margin: auto 0;
  height: 340rpx;
  margin-bottom: 15px;
}

.post-content {
  color: #666;
  margin-left: 20rpx;
  margin-bottom: 20rpx;
  font-size: 28rpx;
  letter-spacing: 2rpx;
  line-height: 40rpx;
}

.post-like {
  display: flex;
  flex-direction: row;
  line-height: 16px;
  margin-left: 10px;
  font-size: 13px;
}

.post-like-image {
  width: 16px;
  height: 16px;
  margin-right: 8px;
  vertical-align: middle;
}

.post-like-font {
  margin-right: 20px;
  vertical-align: middle;
}